<div class="switch-file-browser">
  <h4>Files</h4>
  <% if @bash_bunny_path.include?('/') %>
      <ul>
        <% path = "/payloads/switch#{local_assigns[:switch_position].to_s}" %>
        <% Dir.foreach("#{@bash_bunny_path}#{path}") do |switch_file| %>
            <% next if switch_file == '.' || switch_file == '..' %>
            <li><a href="/dashboard/raw_file?path=<%= path %>&file=<%= switch_file %>" target="_blank"><%= switch_file %></a></li>
        <% end %>
      </ul>
  <% end %>
  <label for="switch-<%= local_assigns[:switch_position].to_s %>-upload">Upload</label>
  <input type="file" id="switch-<%= local_assigns[:switch_position].to_s %>-upload" name="switch-<%= local_assigns[:switch_position].to_s %>-upload">
</div>